<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    package="com.progetto.ingegneria.appalta">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".Activities.InitActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MapsActivity"
            android:label="@string/title_activity_maps">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MenuActivity"
            android:label="@string/title_activity_menu"
            android:parentActivityName=".Activities.MapsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.progetto.ingegneria.appalta.Activities.MapsActivity" />
        </activity>
        <activity
            android:name=".Activities.SelectedItemActivity"
            android:label="@string/title_activity_selected_marker"
            android:parentActivityName=".Activities.MapsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.progetto.ingegneria.appalta.Activities.MapsActivity" />
        </activity>
        <activity
            android:name=".Activities.ListActivity"
            android:label="@string/title_activity_list"
            android:parentActivityName=".Activities.MapsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.progetto.ingegneria.appalta.Activities.MapsActivity" />
        </activity>
        <activity
            android:name=".Activities.CompanyListActivity"
            android:label="@string/title_activity_company_list"
            android:parentActivityName=".Activities.MapsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.progetto.ingegneria.appalta.Activities.MapsActivity" />
        </activity>
        <activity
            android:name=".Activities.SelectedCompanyActivity"
            android:label="@string/title_activity_selected_company"
            android:parentActivityName=".Activities.CompanyListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.progetto.ingegneria.appalta.Activities.CompanyListActivity" />
        </activity>
    </application>

</manifest>